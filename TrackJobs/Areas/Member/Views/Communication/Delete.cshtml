@model TrackJobs.Areas.Member.Data.Communication

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Activity</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JobOffer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobOffer.GuId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Activity Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CommunicationType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        @{
            if(User.IsInRole("Member"))
            {
                <input type="submit" value="Delete" class="btn btn-danger" />
            }
            if(User.IsInRole("Demo"))
            {
                <input type="submit" value="Delete" class="btn btn-danger" disabled />
                <span>(disabled for demo)</span>
            }
        }

        | <a href="javascript: history.go(-1)">Go Back</a>
    </form>
</div>
