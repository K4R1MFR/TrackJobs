@model TrackJobs.Areas.Member.Models.JobOffer.Edit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Job Offer</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GuId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CommunicationCount" />
            <div class="row">
            <div class="col-md-4">
                <label><strong>General</strong></label>
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label">Company Name</label>
                    <input asp-for="CompanyName" class="form-control" data-val-required="The Company Name is required." />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OfferTitle" class="control-label">Offer Title</label>
                    <input asp-for="OfferTitle" class="form-control" data-val-required="The Offer Title is required." />
                    <span asp-validation-for="OfferTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SourceId" class="control-label">Source</label>
                    <select asp-for="SourceId" class ="form-control" asp-items="ViewBag.SourceId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="LinkToOffer" class="control-label">Link to Offer</label>
                    <input asp-for="LinkToOffer" class="form-control" />
                    <span asp-validation-for="LinkToOffer" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsWFHAvailable" />WFH Available
                </label>
                </div>
                <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsFavorite" />Favorite
                </label>
                </div>
            </div>

            <div class="col-md-4">
                <label><strong>Address</strong></label>
                <div class="form-group">
                    <label asp-for="StreetNumber" class="control-label">Street Number</label>
                    <input asp-for="StreetNumber" class="form-control" />
                    <span asp-validation-for="StreetNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StreetName" class="control-label">Street Name</label>
                    <input asp-for="StreetName" class="form-control" />
                    <span asp-validation-for="StreetName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label">City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Postcode" class="control-label">Postcode</label>
                    <input asp-for="Postcode" class="form-control" />
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="State" class="control-label">State</label>
                    <select asp-for="State" class ="form-control" asp-items="ViewBag.State" >
                        <option value="">Select a State</option>
                        <option value="NSW">NSW</option>
                        <option value="ACT">ACT</option>
                        <option value="VIC">VIC</option>
                        <option value="QLD">QLD</option>
                        <option value="NT">NT</option>
                        <option value="SA">SA</option>
                        <option value="WA">WA</option>
                        <option value="TAS">TAS</option>
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>

            </div>


            <div class="col-md-4">
                <label><strong>Optional</strong></label>
                <div id="AppliedOn" class="form-group" >
                    <label asp-for="AppliedOn" class="control-label">Applied On</label>
                    <input asp-for="AppliedOn" class="form-control" />
                    <span asp-validation-for="AppliedOn" class="text-danger"></span>
                </div>
                <div id="HasSentResumne" class="form-group form-check" >
                    <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasSentResume" />Has Sent Resume
                    </label>
                </div>
                <div id="HasSentCoverLetter" class="form-group form-check" >
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="HasSentCoverLetter" />Has Sent Cover Letter
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Perks" class="control-label">Perks</label>
                    <textarea asp-for="Perks" class="form-control"></textarea>
                    <span asp-validation-for="Perks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pros" class="control-label">Pros</label>
                    <textarea asp-for="Pros" class="form-control"></textarea>
                    <span asp-validation-for="Pros" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cons" class="control-label">Cons</label>
                    <textarea asp-for="Cons" class="form-control"></textarea>
                    <span asp-validation-for="Cons" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" style="min-height: 300px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
            </div>

            @{
                if(User.IsInRole("Member"))
                {
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-premier" style="margin-top: 10px;" />
                    </div>
                }
                if(User.IsInRole("Demo"))
                {
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-premier" style="margin-top: 10px;" disabled />
                    </div>
                    <p>(disabled for demo)</p>
                }
            }

            
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to My Job Offers</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
