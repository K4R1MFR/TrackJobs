@model TrackJobs.Areas.Member.Data.JobOffer

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>JobOffer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Company Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            Offer Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfferTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Source.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GuId" />
        @{
            if(User.IsInRole("Member"))
            {
                <input type="submit" value="Delete" class="btn btn-danger" />
            }
            if(User.IsInRole("Demo"))
            {
                <input type="submit" value="Delete" class="btn btn-danger" disabled />
                <span>(disabled for demo)</span>
            }
        }
        | <a asp-controller="Home" asp-action="Index">Back to My Job Offers</a>
    </form>
</div>
